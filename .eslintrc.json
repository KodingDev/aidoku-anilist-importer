{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "ignorePatterns": [
    "node_modules/*"
  ],
  "extends": [
    "eslint:recommended"
  ],
  "overrides": [
    {
      "files": [
        "**/*.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
      ],
      "rules": {
        "prettier/prettier": [
          "error",
          {},
          {
            "usePrettierrc": true
          }
        ]
      }
    }
  ]
}